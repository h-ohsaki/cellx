import fileinput
import os
import sys

from perlcompat import die, getopts
import cellx

def usage():
    die("""\
usage: {} [-v] [file...]
  -v    verbose mode
""".format(sys.argv[0]))

def main():
    opt = getopts('c:M:F:L:A:m:') or usage()
    mon = cellx.monitor.SDL()
    cel = cellx.Cell(monitor=mon)
    parser = cellx.Parser(cell=cel)
    for line in fileinput.input():
        line = line.rstrip()
        parser.parse_line(line)

if __name__ == "__main__":
    main()
